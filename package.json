{
  "name": "pss",
  "version": "4.3.0-0",
  "description": "Prop styles system for styled components",
  "author": "John Grishin <hi@johngrish.in>",
  "license": "MIT",
  "repository": "exah/pss",
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "files": [
    "./esm",
    "./cjs"
  ],
  "tags": [
    "css-in-js",
    "styles",
    "emotion",
    "glamorous",
    "react",
    "prop-styles",
    "styled-components",
    "css"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:esm": "cross-env NODE_ENV=production babel src -d esm",
    "build:cjs": "cross-env NODE_ENV=production MODULES=cjs babel src -d cjs",
    "build:docs": "documentation build -c ./.documentation.yml src/** -f md -o docs/api.md",
    "prebuild": "npm run cleanup",
    "watch": "run-p \"build:* -- -w\" \"test:unit -- --watchAll\"",
    "prewatch": "npm run cleanup",
    "test": "run-s test:*",
    "test:unit": "jest",
    "test:lint": "eslint src test",
    "release": "np --no-cleanup",
    "cleanup": "rimraf cjs esm",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "preversion": "npm run build",
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "./src/**/*.js": "eslint",
    "./test/**/*.js": "eslint"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "standard",
    "rules": {
      "no-shadow": 2
    }
  },
  "auto-changelog": {
    "unreleased": true,
    "commitLimit": false,
    "tagPattern": "^\\d+\\.\\d+.\\d+$",
    "template": ".changelog.hbs"
  },
  "jest": {
    "testMatch": [
      "**/test/*.js"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "@emotion/core": "^10.0.7",
    "@emotion/styled": "^10.0.7",
    "auto-changelog": "^1.11.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "cross-env": "5.2.0",
    "documentation": "^9.1.1",
    "eslint": "^5.13.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "expect": "^24.1.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-emotion": "^10.0.7",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.1.3",
    "np": "4.0.2",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-test-renderer": "^16.8.1",
    "rimraf": "^2.6.3",
    "styled-components": "^4.1.3"
  },
  "dependencies": {
    "@exah/utils": "^2.0.0",
    "prop-types": "^15.6.2"
  }
}
