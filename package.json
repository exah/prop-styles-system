{
  "name": "pss",
  "version": "2.3.2",
  "description": "Prop styles system for styled components",
  "author": "John Grishin <hi@johngrish.in>",
  "license": "MIT",
  "repository": "exah/pss",
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "files": [
    "./esm",
    "./cjs"
  ],
  "tags": [
    "css-in-js",
    "styles",
    "emotion",
    "glamorous",
    "react",
    "prop-styles",
    "styled-components",
    "css"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:esm": "cross-env NODE_ENV=production babel src -d esm",
    "build:cjs": "cross-env NODE_ENV=production MODULES=cjs babel src -d cjs",
    "build:docs": "documentation build -c ./.documentation.yml src/** -f md -o docs/api.md",
    "prebuild": "npm run cleanup",
    "watch": "run-p \"build:* -- -w\" \"test:unit -- -w\"",
    "prewatch": "npm run cleanup",
    "test": "run-s test:*",
    "test:lint": "eslint src test",
    "test:unit": "cross-env MODULES=cjs ava test",
    "test:types": "flow check",
    "deploy": "np --no-cleanup",
    "cleanup": "rimraf cjs esm",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "preversion": "npm run build",
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "./src/**/*.js": "eslint",
    "./test/**/*.js": "eslint"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "flowtype"
    ],
    "rules": {
      "no-shadow": 2
    }
  },
  "auto-changelog": {
    "unreleased": true,
    "commitLimit": 20,
    "template": ".changelog.hbs"
  },
  "ava": {
    "verbose": true,
    "require": [
      "@babel/register"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "auto-changelog": "^1.8.0",
    "ava": "1.0.0-beta.8",
    "babel-eslint": "^9.0.0",
    "cross-env": "5.2.0",
    "documentation": "^8.1.2",
    "emotion": "^9.2.8",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.79.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "np": "3.0.4",
    "npm-run-all": "^4.1.3",
    "ramda": "^0.25.0",
    "react": "^16.4.2",
    "react-emotion": "^9.2.8",
    "react-test-renderer": "^16.4.2",
    "rimraf": "^2.6.2",
    "styled-components": "^3.4.5"
  }
}
