{
  "name": "@exah/prop-styles-system",
  "version": "0.2.0",
  "description": "Prop styles system for styled components",
  "author": "John Grishin <hi@johngrish.in>",
  "license": "MIT",
  "repository": "exah/prop-styles-system",
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "files": [
    "./esm",
    "./cjs"
  ],
  "tags": [
    "css-in-js",
    "emotion-js",
    "prop-styles",
    "styled-components",
    "css"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:esm": "cross-env NODE_ENV=production babel src -d esm",
    "build:cjs": "cross-env NODE_ENV=production BABEL_ENV=modules babel src -d cjs",
    "build:docs": "documentation build -c ./.documentation.yml src/** -f md -o docs/api.md",
    "prebuild": "npm run cleanup",
    "watch": "run-p \"build:* -- -w\" \"test:unit -- -w\"",
    "prewatch": "npm run cleanup",
    "test": "run-s test:*",
    "test:lint": "eslint src test",
    "test:unit": "cross-env BABEL_ENV=modules ava test",
    "deploy": "np --no-cleanup",
    "cleanup": "rimraf cjs esm",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "preversion": "npm run build",
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "./src/**/*.js": "eslint",
    "./test/**/*.js": "eslint"
  },
  "eslintConfig": {
    "extends": "standard",
    "parser": "babel-eslint",
    "rules": {
      "no-shadow": 2
    }
  },
  "auto-changelog": {
    "unreleased": true,
    "commitLimit": 10,
    "template": ".changelog.hbs"
  },
  "ava": {
    "verbose": true,
    "require": [
      "babel-register"
    ]
  },
  "devDependencies": {
    "auto-changelog": "^1.7.1",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "cross-env": "5.1.6",
    "documentation": "^8.0.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "flow-bin": "^0.73.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.3",
    "np": "3.0.4",
    "npm-run-all": "^4.1.3",
    "ramda": "^0.25.0",
    "rimraf": "^2.6.2"
  }
}
