{
  "name": "pss",
  "version": "0.0.1",
  "description": "Prop styles system for styled components",
  "author": "John Grishin <hi@johngrish.in>",
  "license": "MIT",
  "repository": "exah/framez",
  "sideEffects": false,
  "main": "umd/index.js",
  "module": "esm/index.js",
  "files": [
    "./esm",
    "./umd"
  ],
  "tags": [
    "css-in-js",
    "emotion-js",
    "styled-components",
    "css"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:esm": "buble --objectAssign Object.assign -n modules -i src -o esm",
    "build:umd": "cross-env NODE_ENV='production' rollup -c",
    "prebuild": "npm run cleanup",
    "watch": "run-p watch:*",
    "watch:esm": "watch 'npm run build:esm' src",
    "watch:umd": "rollup -c -w",
    "prewatch": "npm run cleanup",
    "test": "ava src/**/__tests__/**/*.js",
    "lint": "eslint src",
    "deploy": "np",
    "cleanup": "rimraf umd esm",
    "preversion": "npm run build",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "prefer-promise-reject-errors": 0,
      "no-shadow": 2
    }
  },
  "ava": {
    "verbose": true,
    "require": [
      "babel-register"
    ]
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-core": "6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "buble": "^0.19.3",
    "cross-env": "5.1.5",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.1",
    "np": "2.20.1",
    "npm-run-all": "^4.1.3",
    "react": "^16.3.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.59.1",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-babili": "^3.1.1",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "ramda": "^0.25.0"
  }
}
