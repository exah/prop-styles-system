{
  "name": "pss",
  "version": "5.0.0",
  "description": "Prop styles system for styled components",
  "author": "John Grishin <hi@johngrish.in>",
  "license": "MIT",
  "repository": "exah/pss",
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "files": [
    "esm/**",
    "cjs/**",
    "prop-type.js"
  ],
  "tags": [
    "css-in-js",
    "styles",
    "emotion",
    "glamorous",
    "react",
    "prop-styles",
    "styled-components",
    "css"
  ],
  "scripts": {
    "build": "run-s build:* docs",
    "build:esm": "cross-env NODE_ENV=production babel src -d esm",
    "build:cjs": "cross-env NODE_ENV=production MODULES=cjs babel src -d cjs",
    "docs": "run-s docs:*",
    "docs:api": "documentation build -c ./.documentation.yml ./src/** ./prop-type.js -f md -o docs/api.md",
    "prebuild": "npm run cleanup",
    "watch": "run-p \"build:* -- -w\" \"docs:* -- -w\" \"test:unit -- --watchAll\"",
    "prewatch": "npm run cleanup",
    "test": "run-s test:*",
    "test:unit": "jest",
    "test:lint": "eslint src",
    "test:size": "npm run build:esm && size-limit",
    "release": "np --no-cleanup",
    "cleanup": "rimraf cjs esm",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "preversion": "npm run build",
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "size-limit": [
    {
      "limit": "5 KB",
      "path": "./esm/index.js"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "./src/**/*.js": "eslint",
    "./test/**/*.js": "eslint"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "standard",
    "rules": {
      "no-shadow": 2
    }
  },
  "auto-changelog": {
    "unreleased": true,
    "commitLimit": false,
    "tagPattern": "^\\d+\\.\\d+.\\d+$",
    "template": ".changelog.hbs"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/*.js"
    ]
  },
  "dependencies": {
    "@exah/utils": "^2.0.0"
  }
}
